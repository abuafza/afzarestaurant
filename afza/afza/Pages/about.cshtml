@page
@model afza.Pages.aboutModel
@{
    ViewData["Title"] = "About";
}

<!-- ABOUT US AREA -->
<div class="container" style="margin-top: 100px;">
    <div class="row mb-3">
        <div class="col-4"></div>
        <div class="col-4 border-bottom border-info">
            <h2 class="text-center">ABOUT US</h2>
        </div>
        <div class="col-4"></div>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="card" style="border: 0px;">
                <div class="card-body">
                    <h3 class="card-title">Our Story</h3>
                    <p class="card-text text-justify"><strong style="color:tomato">afza</strong>  is a restaurant that serves various authentic set of meals as we aim to satisfy our customers. Here at afza restaurant passion is the most important ingredient, as we deliver our top-notch services solely for customer satisfaction. The environment we strive to create is one set out for comfort so our customers can feel relaxed while they eat our delicious meals to their outmost satisfaction.</p>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card">
                <img src="img/chicken.jpg" class="card-img-top" alt="...">
            </div>
        </div>
    </div>
</div>


<!-- Amount of Summary -->
<div class="container-fluid my-3 p-0" style="background: url(img/aboutUsSummary.jpg) no-repeat center center; background-attachment: fixed; border-radius: 0.5em;">
    <div class="overlay">
        <div class="container py-3">
            <div class="row">
                <div class="col-1"></div>
                <div class="col-10 my-5">
                    <div class="card-group">
                        <div class="card mx-2 rounded text-center text-white" style="background-color: rgba(12,23,23, 0.5);">
                            <div class="card-body">
                                <h1 class="card-title display-4">59</h1>
                                <h3 class="card-title"><strong>Food Items</strong></h3>
                            </div>
                        </div>
                        <div class="card mx-2 rounded text-center text-white" style="background-color: rgba(12,23,23, 0.5);">
                            <div class="card-body">
                                <h1 class="card-title display-4">19</h1>
                                <h3 class="card-title"><strong>Tables</strong></h3>
                            </div>
                        </div>
                        <div class="card mx-2 rounded text-center text-white" style="background-color: rgba(12,23,23, 0.5);">
                            <div class="card-body">
                                <h1 class="card-title display-4">151</h1>
                                <h3 class="card-title"><strong>Orders Completed</strong></h3>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-1"></div>
            </div>
        </div>
    </div>
</div>

<!-- Comment of Board Director -->
<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <div class="row">
                <ul class="list-unstyled my-2">
                    <li class="media my-5">
                        <img src="img/ceo1.jpg" width="100" class="mr-3 rounded-circle" alt="...">
                        <div class="media-body pl-3 ml-2" style="border-left: 4px solid #0095ff">
                            <h3 class="mt-0 mb-1">CEO</h3>
                            Founded in 2017, afza restaurant Canada is a privately-held company based in Scarborough, Ontario. Follow afzarestaurant on Facebook, Twitter, Instagram and LinkedIn and join the conversation by using #worklearnafza.
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-2"></div>
    </div>
</div>
<hr />
<!-- For Contact send message -->
<div class="jumbotron">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center">
                <p style="font-size:larger">
                    For more information about <strong style="color:tomato">afza</strong>  Restaurant
                    send a message <a asp-area="" asp-page="/contact">click here</a>
                </p>
            </div>
        </div>
    </div>
</div>